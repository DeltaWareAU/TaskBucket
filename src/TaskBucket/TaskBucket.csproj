<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Authors>Bradley Clarke</Authors>
    <Company>DeltaWare</Company>
    <Copyright>Copyright (c) 2020 DeltaWare</Copyright>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageIcon>nuget_logo.png</PackageIcon>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Description>Hasle free asynchronous background tasks</Description>
    <PackageTags>Tasks; Background; Async; Asynchronous</PackageTags>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <Version>1.0.0.13-prerelease</Version>
    <PackageReleaseNotes>RENAMED | All References to Job to Task, this improves the symantics of the library.
* AddBackgroundJob -&gt; AddBackgroundTask
* IJobReference -&gt; ITaskReference

ADDED | Documentation to most public methods and properties. This should help in usage

REWORKED | How options work
REWORKED | How TaskHistory is kept</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DeltaWare.SDK.Common" Version="1.0.0.2-prerelease" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\nuget_logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
